{
    "version": "0.2.0",
    // See: https://github.com/golang/vscode-go/blob/master/docs/debugging.md#configuration
    "configurations": [
        {
            "name": "Debug mysql-sniffer (lo0)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/mysql-sniffer.go",
            "args": [
                "-i",
                "lo0",
                "-P",
                "3306",
                "-v"
            ],
            "env": {},
            "showLog": true,
            "asRoot": true,
            "preLaunchTask": "go: clean build cache"
        },
        {
            "name": "Debug mysql-sniffer (custom)",
            "type": "go",
            "request": "launch",
